{
    "$schema": "http://json-schema.org/schema#",
    "title": "Pivot",
    "description": "A pivot component's schema definition.",
    "type": "object",
    "id": "pivot",
    "properties": {
        "activeId": {
            "title": "Active pivot ID",
            "type": "string"
        },
        "label": {
            "title": "HTML aria-label attribute",
            "type": "string"
        },
        "orientation": {
            "title": "HTML aria-orientation attribute",
            "type": "string",
            "enum": [
                "horizontal",
                "vertical"
            ]
        }
    },
    "reactProperties": {
        "children": {
            "title": "Building blocks",
            "type": "children",
            "ids": [
                "tab-item"
            ]
        }
    },
    "required": [
        "label"
    ]
}
